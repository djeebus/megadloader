{
  "dependencies": {
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  },
  "scripts": {
    "start": "concurrently --kill-others \"npm run frontend\" \"npm run backend\"",
    "frontend": "webpack-dev-server --mode=development --config webpack.config.js",
    "backend": "docker build . --tag megadloader:current && docker run -p 10101:10101 --mount type=bind,source=%cd%,target=/src megadloader:current"
  },
  "babel": {
    "presets": [
      "env",
      "react",
      "stage-2"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "concurrently": "^4.0.1",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5"
  }
}
